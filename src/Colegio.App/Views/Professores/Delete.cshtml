@model Colegio.App.DTO.ProfessorDTO

@{
    ViewData["Title"] = "Excluir Professor";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>

<div>
    <h4>Esta ação será permanente!</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        @if (User.IsInRole("Super"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NomeUnidadeEnsino)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeUnidadeEnsino)
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">Voltar</a>
    </form>
</div>